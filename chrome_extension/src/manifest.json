{
    "name": "Euisu",
    "version": "1.0.0",
    "description": "Yeongho's custom features",
    "permissions": [
        "clipboardWrite",
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "copy-media-snapshot": {
            "suggested_key": {
              "default": "Alt+Shift+C"
            },
            "description": "Copy a media snapshot to clipboard"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle",
            "js": ["delegator.js", "content_agent.js"]
        },
        {
            "matches": [
                "*://en.dict.naver.com/*"
            ],
            "run_at": "document_idle",
            "js": ["en_dict_naver_com.js"]
        },
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "run_at": "document_idle",
            "js": ["www_youtube_com_watch.js"]
        }
    ],
    "manifest_version": 2
}